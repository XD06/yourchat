<script setup>
import { ref, computed, getCurrentInstance, onMounted, nextTick, watch, onUnmounted, onUpdated } from 'vue'
import { useChatStore } from '../stores/chat'
import { ElMessage, ElMessageBox } from 'element-plus'
import { 
