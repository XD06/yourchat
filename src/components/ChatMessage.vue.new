          window.requestAnimationFrame(() => {
            processCodeBlocks(blocks, endIndex, batchSize);
          });
        }
      };
      
      // ÂºÄÂßãÊâπÈáèÂ§ÑÁê?      processCodeBlocks(Array.from(codeBlocks));
    }
    
    // Â§ÑÁêÜmermaidÂõæË°®
    renderMermaidDiagrams();
  });
};

