  }
};

// Use the updated options for markdown rendering
const md = markdownIt(mdOptions);

// ÁºñËæëÁä∂ÊÄÅÂíåÂÜÖÂÆπ
const isEditing = ref(false)
const editingContent = ref('')

// ÂºÄÂßãÁºñËæëÊ∂àÊÅ?const startEdit = () => {
  editingContent.value = props.message.content
  isEditing.value = true
  nextTick(() => {
    const textarea = document.querySelector('.message-editing textarea')
    if (textarea) {
      textarea.focus()
      textarea.setSelectionRange(textarea.value.length, textarea.value.length)
    }
  })
}

// ‰øùÂ≠òÁºñËæëÂÜÖÂÆπ
const saveEdit = () => {
  if (editingContent.value.trim() === '') {
    ElMessage.warning('Message cannot be empty')
    return
  }
  
  const updatedMessage = { ...props.message, content: editingContent.value }
  emit('update', updatedMessage)
  isEditing.value = false
}

// ÂèñÊ∂àÁºñËæë
const cancelEdit = () => {
  isEditing.value = false
}

// Â§ÑÁêÜÁî®Êà∑Ê∂àÊÅØÁöÑÂëΩ‰ª?const handleUserCommand = (command) => {
  switch (command) {
    case 'edit':
      startEdit()
      break
    case 'delete':
      handleDelete()
      break
    case 'copy':
      handleCopy()
      break
  }
}

// Â§ÑÁêÜAIÊ∂àÊÅØÁöÑÂëΩ‰ª?const handleAssistantCommand = (command) => {
  switch (command) {
    case 'regenerate':
      emit('regenerate', props.message)
      break
    case 'copy':
      handleCopy()
      break
    case 'delete':
      handleDelete()
      break
  }
}

// Áªü‰∏ÄÂ§ÑÁêÜÂà†Èô§Ê∂àÊÅØ
const handleDelete = () => {
  // ‰ΩøÁî®confirmÈÅøÂÖçËØØÂà†
  ElMessageBox.confirm('Á°ÆÂÆöË¶ÅÂà†Èô§ËøôÊù°Ê∂àÊÅØÂêó?', 'ÊèêÁ§∫', {
    confirmButtonText: 'Á°ÆÂÆö',
    cancelButtonText: 'ÂèñÊ∂à',
    type: 'warning'
  }).then(() => {
    emit('delete', props.message)
  }).catch(() => {
    // Áî®Êà∑ÂèñÊ∂àÔºå‰∏çÊâßË°å‰ªª‰ΩïÊìç‰Ωú
  })
}

// Â§çÂà∂Ê∂àÊÅØÂÜÖÂÆπ
const handleCopy = async () => {
  try {
    await navigator.clipboard.writeText(props.message.content)
    ElMessage.success('Copied to clipboard')
  } catch (error) {
    console.error('Failed to copy:', error)
    ElMessage.error('Failed to copy content')
  }
}

// ÁõëÂê¨Ê∂àÊÅØÂÆåÊàêÁä∂ÊÄ?watch(() => props.message.completed, (newVal) => {
  if (newVal && !messageCompleted.value) {
    messageCompleted.value = true;
    
    // Âª∂ËøüÂ§ÑÁêÜ‰ª£Á†ÅÂùóÔºå‰ª•Á°Æ‰øùÂÆÉ‰ª¨Âú®ÊâÄÊúâÂ≠óÁ¨¶ÊòæÁ§∫ÂêéÂÜçÊòæÁ§?    setTimeout(() => {
      console.log("Ê∂àÊÅØÂÆåÊàêÁä∂ÊÄÅÂèòÊõ¥ÔºåÂ§ÑÁêÜ‰ª£Á†ÅÂùóÂíåÂõæË°®");
      processPendingCodeBlocks();
      
      // Âª∂ËøüËß¶ÂèëMermaidÂõæË°®Ê∏≤Êüì
      setTimeout(() => {
        renderMermaidDiagrams();
      }, 300);
    }, 150);
  }
})

// ‰øÆÊîπupdateContentDisplayÂáΩÊï∞ÔºåÂ¢ûÂä†Ê∂àÊÅØÂÆåÊàêÁöÑÂà§Êñ≠ÈÄªËæë
const updateContentDisplay = (content) => {
  if (!content) return;
  
  // Ê£ÄÊü•Ê∂àÊÅØËßíËâ?  if (props.message.role !== 'assistant') {
    // Áî®Êà∑Ê∂àÊÅØÁõ¥Êé•Ê∏≤Êüì
    messageContent.value = renderMarkdown(content);
    messageCompleted.value = true;
    return;
  }
  
  // Ê£ÄÊü•Ê∂àÊÅØÊòØÂê¶Â∑≤ÂÆåÊàê
  const isComplete = props.message.completed || props.message.error;
  
  // Ê£ÄÊµãÊ∂àÊÅØÊòØÂê¶ÂåÖÂê´ÂÆåÊï¥ÁöÑ‰ª£Á†ÅÂùóÊàñÂõæË°®
  const hasCompleteCodeBlocks = content.includes("```") && 
                               (content.match(/```/g) || []).length % 2 === 0;
  
  const hasMermaidBlocks = content.includes("```mermaid") && 
                           content.match(/```mermaid[\s\S]*?```/g);
  
  // Áõ¥Êé•Ê∏≤ÊüìÊñ∞Êé•Êî∂Âà∞ÁöÑÂÜÖÂÆ?  messageContent.value = renderMarkdown(content, { 
    smoothOutput: true // ÂêØÁî®Âπ≥ÊªëËæìÂá∫ÈÄâÈ°π
  });
  
  // ËÆæÁΩÆ‰ª£Á†ÅÂùó‰∫§‰∫?  nextTick(() => {
    setupCodeBlockInteractions();
  });
  
  // Â¶ÇÊûúÊ∂àÊÅØÂÆåÊàêÊàñÂåÖÂê´ÂÆåÊï¥‰ª£Á†ÅÂùóÔºåÂ§ÑÁêÜ‰ª£Á†ÅÂùóÊ∏≤Êüì
  if ((isComplete || hasCompleteCodeBlocks) && !messageCompleted.value) {
    console.log("Â§ÑÁêÜ‰ª£Á†ÅÂùóÔºåÊ∂àÊÅØÂÆåÊàêÁä∂ÊÄ?", isComplete, "ÂåÖÂê´ÂÆåÊï¥‰ª£Á†ÅÂù?", hasCompleteCodeBlocks);
    
    // Âª∂ËøüÂ§ÑÁêÜ‰ª£Á†ÅÂùóÔºåÁªôÂ≠óÁ¨¶ËæìÂá∫ÁïôÂá∫Á©∫Èó?    setTimeout(() => {
      // Â§ÑÁêÜÁ≠âÂæÖ‰∏≠ÁöÑ‰ª£Á†ÅÂù?      processPendingCodeBlocks();
      
      // Â¶ÇÊûúÂåÖÂê´MermaidÂõæË°®ÂíåÊ∂àÊÅØÂ∑≤ÂÆåÊàêÔºåÂÜçËß¶ÂèëÂõæË°®Ê∏≤Êüì
      if (hasMermaidBlocks && isComplete) {
        console.log("Â§ÑÁêÜMermaidÂõæË°®");
        // Âª∂ËøüËß¶ÂèëMermaidÂõæË°®Ê∏≤Êüì
        setTimeout(() => {
          renderMermaidDiagrams();
        }, 300);
      }
    }, 150);
    
    // Âè™ÊúâÂÆåÂÖ®ÂÆåÊàêÁöÑÊ∂àÊÅØÊâçÊ†áËÆ∞‰∏∫Â∑≤ÂÆåÊàê
    if (isComplete) {
      messageCompleted.value = true;
    }
  }
};

// Â§ÑÁêÜÊ∂àÊÅØÊõ¥Êñ∞
watch(() => props.message.content, (newContent) => {
  if (newContent) {
    updateContentDisplay(newContent)
  }
}, { immediate: true })

// ‰øÆÊîπÊ†ºÂºèÂåñÂÜÖÂÆπËÆ°ÁÆóÂ±ûÊÄßÔºå‰ΩøÁî®messageContentËÄå‰∏çÊòØÁõ¥Êé•‰ΩøÁî®props.message.content
const formatContent = computed(() => {
  // ‰ΩøÁî®messageContent‰ª£ÊõøÁõ¥Êé•‰ΩøÁî®props.message.content
  return messageContent.value || '';
});

// Ê†ºÂºèÂåñÊÄùËÄÉÂÜÖÂÆ?const formatThinkingContent = computed(() => {
  if (!props.message.thinkingContent) return '';
  return renderMarkdown(props.message.thinkingContent);
})

// Ê†ºÂºèÂåñÊó∂Èó?const formatTime = (timestamp) => {
  if (!timestamp) return ''
  
  const date = new Date(timestamp)
  return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
}

// È´ò‰∫Æ‰ª£Á†ÅÂùóÂπ∂Ê∑ªÂä†Â§çÂà∂ÂäüËÉΩ
const setupCodeBlockInteractions = () => {
  if (!messageText.value) return;

  // Èò≤Ê≠¢È¢ëÁπÅÂ§ÑÁêÜÔºå‰ΩøÁî®requestAnimationFrameÂª∂ËøüÂ§ÑÁêÜ
  window.cancelAnimationFrame(window._codeRenderFrame);
  window._codeRenderFrame = window.requestAnimationFrame(() => {
    // Ê∑ªÂä†Â§çÂà∂ÂäüËÉΩÂ§ÑÁêÜ
    const copyButtons = messageText.value.querySelectorAll('.copy-btn');
    copyButtons.forEach(button => {
      // ÁßªÈô§ÊóßÁöÑ‰∫ã‰ª∂ÁõëÂê¨Âô®‰ª•ÈÅøÂÖçÈáçÂ§çÁªëÂÆö
      button.removeEventListener('click', handleCopyClick);
      button.addEventListener('click', handleCopyClick);
    });
    
    // Ê∑ªÂä†ËøêË°åHTML‰ª£Á†ÅÂùóÂäüËÉ?    const runButtons = messageText.value.querySelectorAll('.run-btn');
    runButtons.forEach(button => {
      // ÁßªÈô§ÊóßÁöÑ‰∫ã‰ª∂ÁõëÂê¨Âô®‰ª•ÈÅøÂÖçÈáçÂ§çÁªëÂÆö
      button.removeEventListener('click', handleRunClick);
      button.addEventListener('click', handleRunClick);
    });
    
    // È´ò‰∫Æ‰ª£Á†ÅÂù?- ÁªèËøá‰ºòÂåñÁöÑ‰ª£Á†ÅÈ´ò‰∫ÆÂ§ÑÁê?    const codeBlocks = messageText.value.querySelectorAll('.code-block code:not(.hljs)');
    if (codeBlocks.length > 0) {
      // ÈôêÂà∂ÂêåÊó∂Â§ÑÁêÜÁöÑ‰ª£Á†ÅÂùóÊï∞Èáè
      const processCodeBlocks = (blocks, startIndex = 0, batchSize = 3) => {
        const endIndex = Math.min(startIndex + batchSize, blocks.length);
        
        // Â§ÑÁêÜÂΩìÂâçÊâπÊ¨°
        for (let i = startIndex; i < endIndex; i++) {
          const block = blocks[i];
          if (!block.classList.contains('hljs')) {
            try {
              hljs.highlightElement(block);
            } catch (e) {
              console.error('‰ª£Á†ÅÈ´ò‰∫ÆÂ§±Ë¥•:', e);
